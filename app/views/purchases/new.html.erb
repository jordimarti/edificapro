<div class="main-content">
  <div class="container">
    <div class="row">
      <div class="col-sm-4">
        <div class="course-page-title">
          <h2 class="page-title">Tienda</h2>
          <h3 class="page-subtitle"><%= @course_details.name %></h3>
          <%= image_tag(@course_details.image, :alt => 'Imagen del curso', :class => 'img-responsive') %>
          <div class="course-details">
            <p>Datos del curso:</p>
            <ul>
              <li>Profesor/a: <%= @course_details.instructor %></li>
              <li>Precio: <%= (@course_details.price/100).to_s %> €</li>
              <li>Tiempo estimado de realización: 8 horas</li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
        <h3>Información de facturación</h3>

        <%= form_for(:purchase, :url => {:action => 'create'}) do |f| %>
        	
          <input name="purchase[course_id]" type="hidden" value="<%= @course_details.id %>" />

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :first_name, "Nombre" %>
		            <%= f.text_field :first_name, :autofocus => true, :class => 'form-control' %>
		          </div>
		        </div>
		        <div class="col-md-6">
              <div class="form-group">
		          	<%= f.label :last_name, "Apellidos" %>
		            <%= f.text_field :last_name, :class => 'form-control' %>
		          </div>
		        </div>
          </div>

          <div class="form-group">
          	<%= f.label :company_name, "Nombre de la empresa" %>
            <%= f.text_field :company_name, :class => 'form-control' %>
          </div>

          <div class="form-group">
          	<%= f.label :address, "Dirección" %>
            <%= f.text_field :address, :class => 'form-control' %>
          </div>

          

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
		          	<%= f.label :zip_code, "Código postal" %>
		            <%= f.text_field :zip_code, :class => 'form-control' %>
		          </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
		          	<%= f.label :town, "Municipio" %>
		            <%= f.text_field :town, :class => 'form-control' %>
		          </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
		          	<%= f.label :province, "Provincia / Estado" %>
		            <%= f.text_field :province, :class => 'form-control' %>
		          </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
		          	<%= f.label :country, "País" %>
		            <%= f.text_field :country, :class => 'form-control' %>
		          </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
		          	<%= f.label :nif, "Número de identificación fiscal" %>
		            <%= f.text_field :nif, :class => 'form-control' %>
		          </div>
            </div>
          </div>

          <div class="form-group">
            <div class="checkbox">
              <label>
                <%= f.check_box :terms_of_service %>
                He leído y acepto los Términos y condiciones
              </label>
            </div>
          </div>

          <button type="submit" class="btn pay-button">Continuar con el pago</button>

        <% end %>
      </div>
    </div>
  </div>
</div>
