<div class="session-content session-container">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <h2 class="page-title photo-text">Iniciar sesión</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-5">
        <h3 class="photo-text">Debes iniciar sesión para acceder a los cursos de EdificaPRO.</h3>
        

      </div>
      <div class="col-sm-4 col-sm-offset-1  form-well">

        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          

          <div class="form-group"><%= f.label :email, "Correo electrónico" %><br />
          <%= f.email_field :email, :autofocus => true, :class => 'form-control' %></div>

          <div class="form-group"><%= f.label :password, "Contraseña" %><br />
          <%= f.password_field :password, :class => 'form-control'  %></div>

          <%- if devise_mapping.recoverable? %>
            <div class="form-group"><%= link_to "¿Has olvidado tu contraseña?", new_password_path(resource_name) %></div>
          <% end -%>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group"><%= f.check_box :remember_me %> <%= f.label :remember_me, "Recordar los datos" %></div>
          <% end -%>

          <div><%= f.submit "Iniciar sesión", :class => "btn form-button" %></div>
        <% end %>

        <hr>
        <p>Si no tienes cuenta de usuario <br/> <%= link_to "regístrate aquí", new_registration_path(resource_name) %>.</p>

      </div>
    </div>
  </div>
</div>